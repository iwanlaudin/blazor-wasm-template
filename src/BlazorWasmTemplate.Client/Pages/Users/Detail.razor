@page "/users/detail"
@page "/users/detail/{userId:guid}"

@attribute [Authorize]

<PageTitle>WMS - Detail User</PageTitle>

<Breadcrumbs Title="User Management"
             BreadcrumbItems="@(new List<BreadcrumbItem>
             {
                new("User Management", "", false),
                new("User", "/users", false),
                new("Detail User", "", true)
             })" />

<Section>
    <div class="row g-1 my-3 justify-content-md-end">
        <div class="col-auto">
            <Button Title="Reset Password"
                    ButtonColor="btn-primary"
                    ButtonIcon="bi-arrow-repeat"
                    OnClick="HandleClick" />
        </div>
        <div class="col-auto">
            <a class="btn btn-info btn-sm text-white" href="@($"/users/edit/{User?.UserId}")" role="button">
                <i class="bi bi-plus-circle text-white me-1"></i> Edit User
            </a>
        </div>
    </div>
    <hr />
    <div class="row g-1">
        @if (User is not null)
        {
            <div class="col-lg-4 col-md-4">
                <span>Username</span>
                <h6 class="fw-bold">@User.Username</h6>
            </div>
            <div class="col-lg-4 col-md-4 label ">
                <span>Full Name</span>
                <h6 class="fw-bold">@User.FullName</h6>
            </div>
            <div class="col-lg-4 col-md-4 label ">
                <span>Role</span>
                <h6 class="fw-bold">@User.Role</h6>
            </div>
            <div class="col-lg-4 col-md-4 label ">
                <span>Email</span>
                <h6 class="fw-bold">@User.Email</h6>
            </div>
            <div class="col-lg-4 col-md-4 label ">
                <span>Phone Number</span>
                <h6 class="fw-bold">@User.PhoneNumber</h6>
            </div>
        }
        else
        {
            <div class="col-lg-12 col-md-12 label text-center">
                <h5 class="fw-bold">Data tidak ditemukan!</h5>
            </div>
        }

    </div>
</Section>
